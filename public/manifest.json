{
    "manifest_version": 3,
    "name": "Fancy Text SPX6900",
    "version": "1.0.0",
    "description": "A fancy text stylizer for web any website.",
    "icons": {
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "48": "images/icon.png",
            "128": "images/icon.png"
        }
    },
    "permissions": ["activeTab"],
    "background": {
        "service_worker": "background/background.js"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content-scripts/text-selection-handler.js"]
        }
      ]
  }